# Django settings
DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here-minimum-32-chars-long
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=music_events_project.settings
DJANGO_ENV=dev

# Database configuration
DATABASE_URL=postgres://musicevents:musicevents@postgres:5432/musicevents

# API Keys
# Required for Ticketmaster API integration
TICKETMASTER_API_KEY=your_api_key_here

# Spotify API credentials
# To get these credentials:
# 1. Go to https://developer.spotify.com/dashboard/
# 2. Log in with your Spotify account
# 3. Create a new app
# 4. Copy the Client ID and Client Secret here
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Site configuration
SITE_NAME=music.madrid
SITE_LOGO=images/logo.png

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
